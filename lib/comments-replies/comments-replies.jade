#comment-replies
  ul.replies
  - if (user.id)
    form.form.reply-form.hide(method='post', action='#')
      .form-group
        h5= t('comments.arguments.reply')
      .form-group
        textarea.form-control(name='text', rows=4, tabindex=0)
      .form-group.form-actions
        input.btn.form-submit.pull-right(type='submit', value=t('comments.send'))
        a.btn.btn-link.btn-cancel.pull-right(href='#')=t('common.cancel')
        span.form-errors
