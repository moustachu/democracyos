.auth-google-form-page
  header
    &.app-header
      .user-nav
        a[href="/signin"]
          display none
        a[href="/signup"]
          display none

.google-auth-form
  text-align center

  .title-page i
    color #EF5350

  p
    font-size 80%
    margin-bottom 7px

  .btn-google
    display inline-block
    position relative
    margin 20px 0 50px
    padding 8px 20px 8px 12px
    max-width 100%
    border none
    border-radius 4px
    font-weight 600
    color #fff
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    background #EF5350

    &:hover
      color #f7f7f7
      background-color darken(#EF5350, 40%)

    &:active
      color #f7f7f7
      box-shadow inset 0 0 8px rgba(#082665, .6)

    .google-plus:before
      position relative
      top 4px
      margin-right 8px
      padding-right 7px
      border-right 1px solid rgba(#fff, .1)
      font-size 20px
      line-height 0
